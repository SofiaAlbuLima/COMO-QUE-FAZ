    </section>

    <section class="header-dispositivo-desktop">
       <nav class="logos">
          <aside id="container" onmouseover="showDiv1()" onmouseout="hideDiv1()" class="login">
             <a href="/login">
                <img id="img-login_hover" src="imagens/user_icon_hover.svg" alt="Faça Login">
                <img id="img-login" src="imagens/user_icon.png" alt="Faça Login">
             <article id="hide-hover-span">
                  <% if (usuario_logado) { %>
                     <p class="p-1" id="text-user-hover">Seja bem vindo(a)!</p>
                  <% } else { %>
                     <p class="p-1" id="text-user-hover">Faça Login!</p>
                  <% } %>
                <br>
                  <% if (usuario_logado) { %>
                     <p class="p-2" id="text-user-hover2"><%= usuario_logado %></p> 
                  <% } else { %>
                     <p class="p-2" id="text-user-hover2">ENTRAR / CADASTRAR</p> 
                  <% } %>
             </article>
            </a>
          </aside>
          <article class="logo">
             <a href="/">
                <img src="imagens/ComoQueFaz_logo.png" alt="Logo do ComoQueFaz">
             </a>
          </article>
          <aside id="container2" onmouseover="showDiv2()" onmouseout="hideDiv2()" class="search">
             <img src="imagens/search_icon.png" alt="Ícone de Pesquisa">
             <article id="hide-hover-search">
                <input class="texto-search" type="text" name="inserir-pesquisa" placeholder="Pesquisar...">
                <label id="inserir-pesquisa"></label>
             </article>
          </aside>
       </nav>
       <nav class="topcs">
          <a class="culinaria" href="https://grupo4-tca.github.io/Como-que-faz/Categoria-Culinária">CULINÁRIA</a>
          <a class="limpeza" href="https://grupo4-tca.github.io/Como-que-faz/Categoria-Limpeza">LIMPEZA</a>
          <a class="bem-estar" href="https://grupo4-tca.github.io/Como-que-faz/Categoria-Bem-Estar">BEM-ESTAR</a>
       </nav>
    </section>
 </header>