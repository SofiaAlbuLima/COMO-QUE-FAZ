   <main class="main-login">
      <section class="conteudo-dispositivo-mobile">
         <article id="Login" class="tabcontent" style="display:block;">
            <figure class="background-gatin">
               <section class="login-mob">
                  <form action="https://grupo4-tca.github.io/Como-que-faz/Home-Com-Login">
                     <span class="fazer-login-mob">FAZER LOGIN:</span>
                     <p>Seja bem-vindo de volta!</p>

                     <figure class="caixa-mob">
                        <input class="input1" type="text" placeholder="E-MAIL / NOME DE USUÁRIO" required>
                        <input class="input2" type="password" placeholder="SENHA" required>
                     </figure>

                     <article class="redes-login-mob">
                        <span class="esqueceu-foi">Esqueceu a senha? <a href="#">Recupere aqui</a></span>
                        <figure class="redes-botoes-mob">
                           <button><a href=""><img src="imagens/google_logo.svg" alt="login com google"></a></button>
                           <button><a href=""><img src="imagens/facebook_logo.svg"
                                    alt="login com facebook"></a></button>
                           <button><a href=""><img src="imagens/apple_logo.svg" alt="login com apple"></a></button>
                        </figure>
                     </article>

                     <figure class="lembrar-senha-mob">
                        <label><input type="checkbox"> Manter Login</label>
                     </figure>

                     <a href="#"><input type="submit" value="Login" class="login-submit"></a>
                  </form>
                  <!-- TAB LINKS -->
                  <aside class="tab">
                     <button class="tablinks-login" onclick="openCity(event, 'Cadastro')">Criar Conta</button>
                  </aside>
               </section>
            </figure>
         </article>

         <article id="Cadastro" class="tabcontent">
            <section class="cadastro-mob">
               <form action="https://grupo4-tca.github.io/Como-que-faz/Home-Com-Login">
                  <span class="texto1-cadastro">Ainda não tem conta?</span>
                  <p class="texto2-cadastro">SE CADASTRAR:</p>
                  <figure class="caixa-mob2">
                     <input class="cadastros-place1" type="text" placeholder="NOME DE USUÁRIO" required>
                     <input class="cadastros-place2" type="text" placeholder="EMAIL" required>
                     <input class="cadastros-place3" type="password" placeholder="SENHA" required>
                  </figure>

                  <figure class="lembrar-termos-mob">
                     <label><input type="checkbox"> Manter Login</label>
                     <p><label><input type="checkbox"> Li e concordo com os termos*</label></p>
                  </figure>
                  <a href="#"><input type="submit" value="Cadastre-se" class="cadastro-submit-mob"></a>
               </form>
               <!-- TAB LINKS -->
               <aside class="tab">
                  <button class="tablinks-cadastro" onclick="openCity(event, 'Login')">Voltar para o Login</button>
               </aside>
            </section>
         </article>
      </section>

      <section class="conteudo-dispositivo-desktop">

          <%           
           let erroValidacao = {"input1": "", "input2": ""};
          let msgErro = {"input1": "", "input2": ""}; 
       if(listaErros) { 
            listaErros.errors.forEach(function(Itemerro){ 
                if (Itemerro.path == "input1") { 
                  erroValidacao.input1 = "erro" 
                  msgErro.input1 = Itemerro.msg 
                } 
                if (Itemerro.path == "input2") { 
                   erroValidacao.input2 = "erro" 
                   msgErro.input2 = Itemerro.msg 
               } 
            }) 
          }; %> 
         <figure class="decoracao-frente">
            <img src="imagens/gatinho-laranja-decoracao.png" alt="">
            <figure class="circulo" id="cir1"></figure>
         </figure>

         <article class="login-cadastro">
            <section id="Login" class="tabcontent" style="display:block;">
               <figure class="background-gatin">
                  <section class="login-mob">
                     <form action="/login" method="post">

                        <span class="fazer-login-mob">FAZER LOGIN:</span>

                        <p>Seja bem-vindo de volta!</p>

                           <input class="input1" type="text" name="input1"  placeholder="E-MAIL / NOME DE USUÁRIO" required>
                           <span><%= msgErro.input1%></span>
                           
                           <input class="input2" type="password" name="input2"  placeholder="SENHA" required>
                           <span><%= msgErro.input2%></span>
                        
                        <article class="redes-login-mob">
                           <span class="esqueceu-foi">Esqueceu a senha? <a href="#">Recupere aqui</a></span>
                           <figure class="redes-botoes-mob">
                              <button><a href=""><img src="imagens/google_logo.svg" alt="login com google"></a></button>
                              <button><a href=""><img src="imagens/facebook_logo.svg"
                                       alt="login com facebook"></a></button>
                              <button><a href=""><img src="imagens/apple_logo.svg" alt="login com apple"></a></button>
                           </figure>
                        </article>

                        <figure class="lembrar-senha-mob">
                           <label><input type="checkbox"> Manter Login</label>
                        </figure>
                        <button type="submit" class="login-submit">Login</button>
                     </form>
                  </section>
               </figure>
            </section>

            <section id="Cadastro" class="tabcontent">
               <div class="cadastro-mob">
                  <form action="https://grupo4-tca.github.io/Como-que-faz/Home-Com-Login">
                     <span class="texto1-cadastro">Ainda não tem conta?</span>
                     <p class="texto2-cadastro">SE CADASTRAR:</p>
                     <div class="caixa-mob2">
                        <input type="text" placeholder="NOME DE USUÁRIO" required>
                        <input type="text" placeholder="EMAIL" required>
                        <input class="input-criarsenha" type="password" placeholder="SENHA" required>
                        <input class="input-criarsenha" type="password" placeholder="CONFIRMAR SENHA" required>
                     </div>
                     <div class="lembrar-termos-mob">
                        <p><label><input type="checkbox" required> Li e concordo com os termos*</label></p>
                     </div>
                     <a href="#"><input type="submit" value="Cadastre-se" class="cadastro-submit-mob"></a>
                  </form>
               </div>
            </section>
         </article>

         <figure class="decoracao-atrás">
            <figure class="circulo" id="cir2"></figure>
            <figure class="circulo" id="cir3"></figure>
         </figure>
      </section>
   </main>
